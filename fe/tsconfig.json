{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "websql", "webrtc", "chrome"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
